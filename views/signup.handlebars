<h1 class="center">Sign Up</h1>
<main class="container">
    <div class="row">
        <form class="col s12">
            <div class="row">
                <div class="input-field col s6">
                    <input placeholder="First Name" id="first_name" type="text" class="validate">
                </div>
                <div class="input-field col s6">
                    <input placeholder="Last Name" id="last_name" type="text" class="validate">
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Email Address" id="email" type="email" class="validate">
                    <span class="helper-text" data-error="Email is not available" data-success="Email is available"></span>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <input placeholder="Password" id="password" type="password" class="validate">
                </div>
            </div>
        </form>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="signUp"><a href="/">SUBMIT</a>
        <i class="material-icons right">done</i>
    </button>
</main>